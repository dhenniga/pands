<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_product_viewer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.pands.dev.pands.ProductViewer">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.pands.dev.pands.menubar.MenuFunctions
            android:id="@+id/activity_actionbar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            tools:context=""/>

        <FrameLayout
            android:id="@+id/container"
            android:layout_below="@+id/activity_actionbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity"
            tools:ignore="MergeRootFrame" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="-2dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff">

<LinearLayout
    android:id="@+id/llImageContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"/>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp">

            <LinearLayout
                android:id="@+id/llImageContainerBottom"
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/tvProductTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="30sp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:lineSpacingExtra="-7dp"
                android:letterSpacing="-0.05"
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tvProductSalePrice"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/outlined_circle"
                    android:gravity="center"
                    android:textColor="#99000000"
                    android:textSize="16sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tvProductPrice"
                    android:layout_width="73dp"
                    android:layout_height="73dp"
                    android:background="@drawable/rounded_price_button"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="25sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/tvInvisibleSpacer"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/rounded_price_button"
                    android:textSize="16sp"
                    android:visibility="invisible" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvProductShortDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:textSize="14sp"
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp">

                <Button
                    android:id="@+id/btnSubtractStock"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/item_button_count_background"
                    android:textColor="@drawable/item_count_button_text"
                    android:layout_marginRight="10dp"
                    android:textSize="25sp"
                    style="?android:attr/borderlessButtonStyle"
                    android:text="@string/minus_symbol"/>

                <TextView
                android:id="@+id/tvStockQuantity"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="28sp"
                android:background="@drawable/outlined_circle_thin"
                />

                <Button
                    android:id="@+id/btnAddStock"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/item_button_count_background"
                    android:textColor="@drawable/item_count_button_text"
                    android:layout_marginLeft="10dp"
                    android:textSize="25sp"
                    style="?android:attr/borderlessButtonStyle"
                    android:text="@string/plus_symbol"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cart_icon"
                android:textSize="8sp"
                android:textColor="#000000"
                android:layout_centerInParent="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/plus_symbol"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:paddingTop="11dp"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#f8f8f8"
                android:padding="20dp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tvProductCategoriesHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="@string/categories_header"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/tvProductCategories"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:textColor="#000000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

            <TextView
            android:id="@+id/tvProductTagsHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
            android:gravity="start"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/tags_header"
            android:textStyle="bold"
            android:textColor="#000000" />

                    <TextView
                        android:id="@+id/tvProductTags"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:textColor="#000000" />
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/footer"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
