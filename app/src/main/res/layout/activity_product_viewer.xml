<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_product_viewer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.pands.dev.pands.ProductViewer">

    <!--<FrameLayout-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content">-->
    <!--<include layout="@layout/main_menu_slider_left"/>-->
    <!--</FrameLayout>-->

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.pands.dev.pands.menubar.MenuFunctions
            android:id="@+id/activity_actionbar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            tools:context=""/>

        <FrameLayout
            android:id="@+id/container"
            android:layout_below="@+id/activity_actionbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity"
            tools:ignore="MergeRootFrame" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="-2dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff">

<LinearLayout
    android:id="@+id/llImageContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"/>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp">

            <LinearLayout
                android:id="@+id/llImageContainerBottom"
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            </HorizontalScrollView>


        <ImageView
            android:id="@+id/ivProductFeaturedSrc"
            android:contentDescription="@string/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:scaleType="centerInside"
            android:background="#ffffff"
            android:layout_marginTop="65dp"
            android:visibility="gone"
            />

            <TextView
                android:id="@+id/tvProductTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="20dp"
                android:paddingTop="0dp"
                android:text="Product_Title"
                android:textSize="30sp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:lineSpacingExtra="-7dp"
                android:letterSpacing="-0.05"
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvProductSalePrice"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/outlined_circle"
                    android:gravity="center"
                    android:text="#100"
                    android:textColor="#99000000"
                    android:textSize="16sp"
                    android:visibility="gone"/>

                <TextView
                android:id="@+id/tvProductPrice"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/rounded_price_button"
                android:gravity="center"
                android:text="#100"
                android:textColor="#ffffff"
                android:textSize="25sp" />

                <TextView
                    android:id="@+id/tvInvisibleSpacer"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/rounded_price_button"
                    android:gravity="center"
                    android:text="#100"
                    android:textColor="#ffffff"
                    android:alpha="0.2"
                    android:textSize="16sp"
                    android:visibility="gone"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tvProductShortDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:paddingTop="26dp"
                android:textSize="14sp"
                android:text="Product_Short_Description"
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <Button
                    android:id="@+id/btnSubtractStock"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/outlined_circle_thin"
                    android:textColor="#000000"
                    android:layout_marginRight="10dp"
                    android:text="-"/>

                <TextView
                android:id="@+id/tvStockQuantity"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="2"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:background="@drawable/rounded_price_button"
                />

                <Button
                    android:id="@+id/btnAddStock"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/outlined_circle_thin"
                    android:textColor="#000000"
                    android:layout_marginLeft="10dp"
                    android:text="+"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cart_icon"
                android:textSize="8sp"
                android:textColor="#000000"
                android:layout_centerInParent="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:paddingTop="11dp"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#f8f8f8"
                android:padding="20dp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

            <TextView
                android:id="@+id/tvProductCategoriesHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Categories"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:textColor="#000000" />

                    <TextView
                        android:id="@+id/tvProductCategories"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="Categories List"
                        android:textColor="#000000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

            <TextView
            android:id="@+id/tvProductTagsHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
            android:gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Tags"
            android:textStyle="bold"
            android:textColor="#000000" />

                    <TextView
                        android:id="@+id/tvProductTags"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="Tags List"
                        android:textColor="#000000" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvProductImagesHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="5dp"
                android:text="Images"
                android:textStyle="bold"
                android:textColor="#000000"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tvProductImages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Image List"
                android:textColor="#000000"
                android:visibility="gone"/>


            <include layout="@layout/footer"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
